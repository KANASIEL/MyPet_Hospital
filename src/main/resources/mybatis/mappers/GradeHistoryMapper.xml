<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.boot.dao.GradeHistoryDAO">

    <select id="getGradeHistory"
            parameterType="int"
            resultType="com.boot.dto.GradeHistoryDTO">
        SELECT
            history_no,
            user_no,
            grade,
            start_date,
            end_date,
            evaluation_visits,
            evaluation_date
        FROM grade_history
        WHERE user_no = #{user_no}
        ORDER BY history_no DESC
    </select>

</mapper>
